{
    "manifest_version": 2,
    "name": "Pass Free",
    "version": "0.0.1",

    "description": "Generate, store, and auto-fill passwords.",
    "icons": {
        "16": "img/lock_16.png",
        "48": "img/lock_48.png",
        "128": "img/lock_128.png"
    },

    "background": {
        "scripts": [
            "third_party/aes.js",
            "js/const.js",
            "js/global_state.js",
            "js/ui/browser_action.js",
            "js/storage_management.js",
            "js/password_management.js",
            "js/message_dispatch.js",
            "js/init.js"
        ],
        "persistent": false
    },
    "options_page": "html/options.html",

    "browser_action": {
        "default_icon": {
            "19": "img/lock_19.png",
            "38": "img/lock_38.png"
        },
        "default_title": "Pass Free",
        "default_popup": "html/browser_action_popup.html"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ]
}
